<%- include ('../../partials/header.ejs') %>

    <%- include ('../../partials/sidebar.ejs') %>

        <main id="main" class="main">

            <div class="pagetitle">
                <h1>동아리 모집 게시글 작성</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">동아리 모집 게시글 작성</li>
                    </ol>
                </nav>
            </div><!-- End Page Title -->

            <section class="container mt-5">
                <div class="row justify-content-center">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="pt-1 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">동아리 모집 게시글 작성</h5>
                                <form method="POST" class="row g-3 needs-validation" novalidate>
                                    <div class="col-12">
                                        <label for="postTitle" class="form-label">제목</label>
                                        <input type="text" name="post_title" class="form-control" id="postTitle"
                                            placeholder="제목을 입력해주세요" required>
                                        <div class="invalid-feedback">
                                            제목을 입력해주세요.
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="row g-3">
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-text">동아리 이름</span>
                                                    <input type="text" name="dongari_name" class="form-control"
                                                        id="dongariName" placeholder="동아리 이름을 입력해주세요" required>
                                                    <div class="invalid-feedback">
                                                        띄어쓰기를 포함하여 정확하게 입력해주세요.
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-text">모집 인원</span>
                                                    <input type="number" name="recruit_number" class="form-control"
                                                        id="recruitNumber" placeholder="모집 인원을 입력해주세요" required>
                                                    <div class="invalid-feedback">
                                                        모집 인원을 입력해주세요.
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-text">모집 마감일</span>
                                                    <input type="date" name="recruit_deadline" class="form-control"
                                                        id="recruitDeadline" required>
                                                    <div class="invalid-feedback">
                                                        모집 마감일을 입력해주세요.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div id="editor" class="form-control" style="height: 500px;"></div>
                                    </div>

                                    <!-- Drag and Drop area for image upload -->
                                    <div class="col-12 mt-3">
                                        <div id="drop-zone" class="form-control text-center p-5 border-dashed border-2 border-primary bg-light"
                                            style="border-radius: 1rem;">
                                            <p class="text-secondary">여기로 이미지를 드래그 앤 드롭하세요</p>
                                            <input type="file" id="file-input" class="d-none" multiple>
                                            <!-- file upload icon -->
                                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-file-earmark-arrow-up" viewBox="0 0 16 16">
                                                <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5v4.5a1.5 1.5 0 0 0 1.5 1.5h4.5z"/>
                                                <path d="M14 3h-4a.5.5 0 0 1-.5-.5V1s1.5-.145 3 .5a.5.5 0 0 1 .5.5v1z"/>
                                                <path fill-rule="evenodd" d="M8 6.5a.5.5 0 0 1 .5-.5h1.5V3h-1v-.5a.5.5 0 0 0-1 0V3h-1v3H8a.5.5 0 0 1 .5.5z"/>
                                                <path fill-rule="evenodd" d="M8.5 11a.5.5 0 0 1-.5-.5V8h-1v2.5a.5.5 0 0 1-1 0V8H5v2.5a.5.5 0 0 1-.5.5H4a.5.5 0 0 1 0-1h.5V7.5A.5.5 0 0 1 5 7h1.5a.5.5 0 0 1 .5.5V10h1V7.5a.5.5 0 0 1 .5-.5H9a.5.5 0 0 1 .5.5V10H10V7.5a.5.5 0 0 1 .5-.5h.5a.5.5 0 0 1 0 1h-.5V11a.5.5 0 0 1-.5.5h-1z"/>
                                            </svg>
                                        </div>
                                    </div>

                                    <div class="col-12 mt-3">
                                        <div class="d-flex justify-content-end">
                                            <button id="completePostBtn" type="submit"
                                                class="btn btn-primary btn-block">게시물 작성</button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- 로딩 스피너 -->
            <div id="loading-spinner" style="display: none;">
                <div class="spinner">
                    <div class="circle"></div>
                    <div class="circle"></div>
                    <div class="circle"></div>
                    <div class="circle"></div>
                </div>
            </div>
        </main><!-- End #main -->

        <!-- ======= Footer ======= -->
