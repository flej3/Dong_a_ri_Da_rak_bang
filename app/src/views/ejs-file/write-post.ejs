<!-- 헤더 include -->
<%- include ('partials/header.ejs') %>

    <%- include ('partials/sidebar.ejs') %>

        <main id="main" class="main">

            <div class="pagetitle">
                <h1>게시글 작성</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">게시글 작성</li>
                    </ol>
                </nav>
            </div><!-- End Page Title -->

            <section class="section post">
                <div class="row">
                    <div class="container">
                        <section
                            class="section write-post min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                            <div class="container">
                                <div class="row justify-content-center">
                                    <div
                                        class="col-lg-6 col-md-8 d-flex flex-column align-items-center justify-content-center">
                                        <div class="d-flex justify-content-center py-4">
                                            <a href="/" class="logo d-flex align-items-center w-auto">
                                            </a>
                                        </div><!-- End Logo -->

                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="pt-4 pb-2">
                                                    <h5 class="card-title text-center pb-0 fs-4">게시물 작성</h5>
                                                </div>

                                                <form method="POST" class="row g-3 needs-validation" novalidate>
                                                    <div class="col-12">
                                                        <label for="dongariName-" class="form-label">동아리 이름</label>
                                                        <div class="input-group">
                                                            <input type="text" name="dongari_name" class="form-control"
                                                                id="dongariName" required>
                                                        </div>
                                                    </div>

                                                    <div class="col-12">
                                                        <label for="introduction" class="form-label">동아리 소개</label>
                                                        <input type="text" name="introduction" class="form-control"
                                                            id="introduction" required>
                                                    </div>

                                                    <div class="col-12">
                                                        <label for="recruitNumber" class="form-label">모집 인원</label>
                                                        <input type="number" name="recruit_number" class="form-control"
                                                            id="recruitNumber" required>
                                                    </div>

                                                    <div class="col-12">
                                                        <label for="recruitDeadline" class="form-label">모집 마감일</label>
                                                        <input type="date" name="recruit_deadline" class="form-control"
                                                            id="recruitDeadline" required>
                                                    </div>

                                                    <div class="row mb-3">
                                                        <label for="inputNumber" class="col-sm-2 col-form-label">사진
                                                            첨부</label>
                                                        <div class="col-sm-10">
                                                            <input class="form-control" type="file" id="formFile">
                                                        </div>

                                                        <div class="col-12">
                                                            <button type="submit" class="btn btn-primary">게시물
                                                                작성</button>
                                                        </div>
                                                </form>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </section>

                    </div>
        </main><!-- End #main -->

        <!-- ======= Footer ======= -->
        <%- include ('partials/footer.ejs') %>
            <!-- End Footer -->

            <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
                    class="bi bi-arrow-up-short"></i></a>

            <!-- Vendor JS Files -->
            <script src="assets/vendor/apexcharts/apexcharts.min.js"></script>
            <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
            <script src="assets/vendor/chart.js/chart.umd.js"></script>
            <script src="assets/vendor/echarts/echarts.min.js"></script>
            <script src="assets/vendor/quill/quill.min.js"></script>
            <script src="assets/vendor/simple-datatables/simple-datatables.js"></script>
            <script src="assets/vendor/tinymce/tinymce.min.js"></script>
            <script src="assets/vendor/php-email-form/validate.js"></script>

            <!-- Template Main JS File -->
            <script src="assets/js/main.js"></script>
            
            <script src="assets/js/post.js"></script>

            </body>

            </ejs>